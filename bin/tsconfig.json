{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "outDir": "js/",
    "baseUrl": "ts",
    "jsx": "react",
    "watch": false,
    "allowJs": true,
    "sourceMap": true
  },
  "files" : [
    "ts/app.tsx",
  ],
  "filesGlob":[
    "**/*.ts",
    "**/*.tsx"
  ],
  "lib":[
    "es6",
    "dom",
    "dom.iterable"
  ],
  "exclude":[
    "vendor",
  ],
  "include" : [
    "ts/**/*",
  ]
}
